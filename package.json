{
  "name": "tova",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "dependencies": {
    "axios": "^1.6.0",
    "better-sqlite3": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development sh -c 'vite & electron .'",
    "build": "tsc && vite build",
    "build:main": "tsc",
    "build:renderer": "vite build",
    "electron-rebuild": "electron-rebuild",
    "package": "npm run build && electron-builder",
    "validate-timing": "npx ts-node src/validate-timing.ts"
  },
  "build": {
    "appId": "com.tova.clinical",
    "productName": "TOVA Clinical",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konsulin-care/tova.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/konsulin-care/tova/issues"
  },
  "homepage": "https://github.com/konsulin-care/tova#readme",
  "description": ""
}
